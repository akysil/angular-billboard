{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "stripInternal": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "module": "es2015",
        "moduleResolution": "node",
        "paths": {
            "@angular/core": ["node_modules/@angular/core"],
            "billboard.js": ["node_modules/billboard.js"]
        },
        "rootDir": ".",
        "outDir": "dist",
        "sourceMap": true,
        "inlineSources": true,
        "target": "es5",
        "skipLibCheck": true,
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "files": [
        "index.ts"
    ],
    "angularCompilerOptions": {
        "strictMetadataEmit": true
    }
}
